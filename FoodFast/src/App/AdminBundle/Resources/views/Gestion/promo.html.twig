{% extends "AppAdminBundle::layout.html.twig" %}

{% block title %}Espace Admin {{ parent() }} | Promo{% endblock %}

{% block app_admin_body %}
    <div class="tiltle">
        <h1>Gestion des produits</h1>
    </div>
    <div class="col-lg-offset-1 col-md-offset-1 col-xs-3 col-md-3 col-lg-3">
       {% include  "AppAdminBundle:Gestion:menu.html.twig" %}
    </div>
    <div class="col-xs-6 col-md-6 col-lg-6">
      <h2 class="titre_form">Ajout Promo</h2>
      <form method="POST" name="app_adminformbundle_user" class="form-horizontal" action="">
        <div class="form-group">
           {{form_label(form.description)}}
           {{form_widget(form.description)}}
        </div>
        <div class="form-group">
           {{form_label(form.prix)}}
           {{form_widget(form.prix)}}
        </div>
        <div class="form-group">
           {{form_label(form.quantite)}}
           {{form_widget(form.quantite)}}
        </div>
        <div>
           <label>Validite *</label>
           <div class="form-group">
              <input type='text' class="form-control" id='datetimepicker' />
           </div>
        </div>
        <div class="form-group bouton-bloc">
           {{form_widget(form.Valider)}}
           {{ form_widget(form.Annuler) }}
        </div>
        <div>
           {{ form_rest(form) }}
        </div>
      </form>
    </div>
{% endblock %}
