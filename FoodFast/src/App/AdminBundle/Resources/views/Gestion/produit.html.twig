{% extends "AppAdminBundle::layout.html.twig" %}

{% block title %}Espace Admin {{ parent() }}{% endblock %}

{% block app_admin_body %}
    <div class="tiltle">
        <h1>Gestion des produits</h1>
    </div>
    <div class="col-xs-5 col-md-5 col-lg-5">
       <ul class="list-group">
         <li class="list-group-item disabled">Produits</li>
         <li class="list-group-item">Promos</li>
       </ul>
    </div>
    <div class="col-xs-7 col-md-7 col-lg-7">
      <form method="POST" name="app_platformbundle_user" class="form-horizontal">
        {{form_widget(form.nomProduit)}}
        {{form_widget(form.typeProduit)}}
        {{form_widget(form.detailProduit)}}
      </form>
    </div>
{% endblock %}