{% extends "AppAdminBundle::layout.html.twig" %}

{% block title %}Espace Admin {{ parent() }}{% endblock %}

{% block app_admin_body %}
    <div class="tiltle">
        <h1>Gestion des produits</h1>
    </div>
    <div class="col-xs-3 col-md-3 col-lg-3">
       <ul class="list-group">
         <li class="list-group-item disabled" id="products">Produits</li>
         <li class="list-group-item" id="promos">Promos</li>
       </ul>
    </div>
    <div class="col-xs-6 col-md-6 col-lg-6">
      <form method="POST" name="app_adminformbundle_user" class="form-horizontal" action="">
        <div class="form-group">
           {{form_label(form.nomProduit)}}
           {{form_widget(form.nomProduit)}}
        </div>
        <div class="form-group">
           {{form_widget(form.typeProduit)}}
        </div>
        <div class="form-group">
           {{form_widget(form.detailProduit)}}
        </div>
        <div class="form-group">
           {{ form_widget(form.Valider) }}
        </div>
        <div>
           {{ form_rest(form) }}
        </div>
      </form>
    </div>
{% endblock %}